<h1>Flats available in <%= @city %></h1>

<div class="container">
  <div class="row">

    <% @flats.each do |flat| %>
    <div class="col-xs-12 col-md-4">
      <%= link_to root_path do %>

      <div class="card" style="background-image: url(<%= image_tag("#{flat.photos.first}" ) %> );">
        <div class="card-category"><%= "#{flat.price}" %></div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
