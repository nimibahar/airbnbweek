<div class="container">
<h3><%= @flat.address %></h3>
<h3><%= @flat.city %></h3>
<h3>Price/night: â‚¬<%= @flat.price %></h3>
<h3>Number of rooms: <%= @flat.rooms %></h3>

<p class="btn btn-default"><%= link_to "Edit Flat", edit_flat_path(@flat) %></p>
<p class="btn btn-default"><%= link_to "Delete", flat_path(@flat), method: :delete %> </p>
<br>
<h2> Photos </h2>
<% @flat.photos.each do |p| %>
<%= p.file_key %>
<% end %>

<h1>Add Photo</h1>

<%= simple_form_for [@flat, Photo.new], html: { class: 'form-horizontal' }  do |f| %>
